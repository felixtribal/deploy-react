# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Indentation settings for JavaScript and JSX files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# Indentation settings for JSON files
[*.json]
indent_style = space
indent_size = 2

# Indentation settings for HTML files
[*.html]
indent_style = space
indent_size = 2

# Indentation settings for CSS and SCSS files
[*.{css,scss}]
indent_style = space
indent_size = 2

# Indentation settings for Markdown files
[*.md]
indent_style = space
indent_size = 2

# Remove trailing whitespace in all files
[*]
trim_trailing_whitespace = true
